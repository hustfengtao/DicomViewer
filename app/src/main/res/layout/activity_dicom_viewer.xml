<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/dicomviewer_actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="@color/white"
        app:navigationIcon="@mipmap/ic_launcher_round"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Dicom图像浏览工具"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:background="@color/white">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/white">
            <TextView
                android:id="@+id/dicomviewer_toggle_tags"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/image_bg_selector"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:ems="1"
                android:textSize="10sp"
                android:text="显示TAG" />
            <TextView
                android:id="@+id/dicomviewer_toggle_toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/image_bg_selector"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:ems="1"
                android:textSize="10sp"
                android:text="显示工具栏"/>
            <TextView
                android:id="@+id/dicomviewer_toggle_thumbbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/image_bg_selector"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:ems="1"
                android:textSize="10sp"
                android:text="显示缩略"/>
            <include layout="@layout/dicomviewer_toolbar" android:visibility="gone"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dicomviewer_rv_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/dicomviewer_photoview"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:divider="@drawable/divider_white">
                    <com.taofe.dicomviewer.FolderPhotoView
                        android:id="@+id/dicomviewer_image_container1"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:divider="@drawable/divider_black"
                        app:expend="true"
                        app:animationduration="500">
                        <include layout="@layout/dicomviewer_image"/>
                    </com.taofe.dicomviewer.FolderPhotoView>
                    <com.taofe.dicomviewer.FolderPhotoView
                        android:id="@+id/dicomviewer_image_container2"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:divider="@drawable/divider_black"
                        app:expend="false"
                        app:animationduration="500">
                        <include layout="@layout/dicomviewer_image"/>
                    </com.taofe.dicomviewer.FolderPhotoView>
                </LinearLayout>
                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                    android:id="@+id/dicomviewer_seekbar_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/trans_gray"
                    android:visibility="invisible">
                    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                        android:id="@+id/dicomviewer_seekbar"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:splitTrack="false"
                        android:progressDrawable="@drawable/seekbar_progress"
                        android:thumb="@drawable/seekbar_thumb"
                        app:seekBarRotation="CW90" /> <!-- Rotation: CW90 or CW270 -->
                </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>
            </LinearLayout>
            <HorizontalScrollView
                android:id="@+id/dicomviewer_rv_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:scrollbars="none"
                android:visibility="gone">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dicomviewer_rv_tags"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
            </HorizontalScrollView>
        </RelativeLayout>
    </LinearLayout>
    <com.taofe.dicomviewer.FolderLinearLayout
        android:id="@+id/dicomviewer_thumbbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:expend="false"
        app:animationduration="500">
        <TextView
            android:layout_width="20dp"
            android:layout_height="120dp"
            android:background="@color/trans_gray"
            android:gravity="center"
            android:ems="1"
            android:textSize="15sp"
            android:text="缩略图"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/dicomviewer_pager_thumb"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@color/darkgray"
            android:clipChildren="false">
        </androidx.viewpager.widget.ViewPager>
        <ImageView
            android:id="@+id/dicomviewer_empty"
            android:layout_width="20dp"
            android:layout_height="120dp"
            android:background="@color/trans_gray"
            android:gravity="center"
            android:src="@mipmap/clear"
            android:scaleType="fitCenter"/>
    </com.taofe.dicomviewer.FolderLinearLayout>
</LinearLayout>